@{
  Layout = "_Layout";
}

@using TravelApi.Models;

<h1>Categories</h1>

@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
} 

<ul>
  @foreach(Destination destination in Model)
  {
    <li>@Html.ActionLink($"{destination.Name}", "Details", new { id = destination.DestinationId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new category", "Create")</p>
<p>@Html.ActionLink("Add new Item", "Create", "Items")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>